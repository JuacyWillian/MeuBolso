#:import NavigationDrawerIconButton kivymd.navigationdrawer.NavigationDrawerIconButton

#:import MDList kivymd.list.MDList
#:import TwoLineAvatarListItem kivymd.list.TwoLineAvatarListItem
#:import ThreeLineAvatarListItem kivymd.list.ThreeLineAvatarListItem

#:import MDSpinner kivymd.spinner.MDSpinner
#:import MDCard kivymd.card.MDCard
#:import MDSeparator kivymd.card.MDSeparator

#:import MDTextField kivymd.textfields.MDTextField
#:import MDCheckbox kivymd.selectioncontrols.MDCheckbox
#:import MDLabel kivymd.label.MDLabel

#:import MDFloatingActionButton kivymd.button.MDFloatingActionButton
#:import MDIconButton kivymd.button.MDIconButton
#:import md_icons kivymd.icon_definitions.md_icons

#:import TELAS app.util.TELAS
#:import TIPO_TRANSACAO app.util.TIPO_TRANSACAO
#:import strings app.lang.s
#:import icon iconfonts.icon

<Widget>:
	font_name: 'ubuntu'

<IconView@MDLabel>:
    font_style: 'Icon'
    size_hint: None, None
    font_size: '24'
    size: 48, 48
    halign: 'center'
    valign: 'center'
    icon: ''
    text: u'{}'.format(md_icons.get(root.icon, ''))



MyRootLayout:
    MDNavigationDrawer:
        id: nav_drawer

        NavigationDrawerToolbar:
            title: strings.app_name
            left_action_items: [['arrow-left', lambda x: app.root.toggle_nav_drawer()]]

        NavigationDrawerIconButton:
            icon: 'home'
            text: "Inicio"
            on_release: root.switch_to(TELAS.INICIO)

        NavigationDrawerIconButton:
            icon: 'account-multiple'
            text: "Contatos"
            on_release: root.switch_to(TELAS.LISTA_CONTATO)

        NavigationDrawerIconButton:
            icon: 'cash-multiple'
            text: "Transações"
            on_release: root.switch_to(TELAS.LISTA_TRANSACAO)

        NavigationDrawerIconButton:
            icon: 'settings'
            text: "Configurações"
            on_release: root.switch_to(TELAS.CONFIGURACAO)

        NavigationDrawerIconButton:
            icon: 'help-circle'
            text: "Sobre"
            on_release: root.switch_to(TELAS.SOBRE)

        NavigationDrawerIconButton:
            icon: 'exit-to-app'
            text: "Sair"
            on_release: app.stop()

    BoxLayout:
        orientation: 'vertical'

        Toolbar:
            id: toolbar
            title: strings.app_name
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]

        ScreenManager:
            id: scr_mngr
            Home:
