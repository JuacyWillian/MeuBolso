MyRootLayout:
    MDNavigationDrawer:
        id: nav_drawer

        NavigationDrawerToolbar:
            title: strings.app_name
            left_action_items: [['arrow-left', lambda x: app.root.toggle_nav_drawer()]]

        NavigationDrawerIconButton:
            icon: 'home'
            text: strings.inicio.capitalize()
            on_release: root.switch_to(TELAS.INICIO)

        NavigationDrawerIconButton:
            icon: 'account-multiple'
            text: strings.contatos.capitalize()
            on_release: root.switch_to(TELAS.LISTA_CONTATO)

        NavigationDrawerIconButton:
            icon: 'cash-multiple'
            text: strings.transacoes.capitalize()
            on_release: root.switch_to(TELAS.LISTA_TRANSACAO)

        NavigationDrawerIconButton:
            icon: 'settings'
            text: strings.configuracoes.capitalize()
            on_release: root.switch_to(TELAS.CONFIGURACAO)

        NavigationDrawerIconButton:
            icon: 'help-circle'
            text: strings.sobre.capitalize()
            on_release: root.switch_to(TELAS.SOBRE)

        NavigationDrawerIconButton:
            icon: 'exit-to-app'
            text: strings.sair.capitalize()
            on_release: app.stop()

    BoxLayout:
        orientation: 'vertical'

        Toolbar:
            id: toolbar
            title: strings.app_name
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]

        ScreenManager:
            id: scr_mngr
            Home:
